{
  "name": "sample-integration-vanillajs",
  "version": "0.1.0",
  "private": true,
  "prettier": "@porsche-design-system/prettier-config",
  "scripts": {
    "prestart": "yarn replace",
    "replace": "yarn replace:initialStyles && yarn replace:fontFaceStylesheet && yarn replace:fontPreloading && yarn replace:notificationOverlay",
    "replace:initialStyles": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_INITIAL_STYLES-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getInitialStyles())') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" index.html",
    "replace:fontFaceStylesheet": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_FONT_FACE_STYLESHEET-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getFontFaceStylesheet())') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" index.html",
    "replace:fontPreloading": "placeholder='<!--PLACEHOLDER_PORSCHE_DESIGN_SYSTEM_FONT_LATIN-->' && partial=$placeholder$(node -e 'console.log(require(\"@porsche-design-system/components-js/partials\").getFontLinks({ weight: [\"regular\", \"semi-bold\"] }))') && regex=$placeholder'.*' && sed -i '' -E -e \"s@$regex@$partial@\" index.html",
    "replace:notificationOverlay": "partial=$(node -e 'console.log(require(\"@porsche-design-system/browser-notification\").includeOverlay().replace(/(\\\\[bd\\/]|&)/g, \"\\\\$1\"))') && regex='<!--PLACEHOLDER_NOTIFICATION-->|<script>.*browser-notification.*<\\/script>' && sed -i '' -E -e \"s@$regex@$partial@\" index.html",
    "start": "serve",
    "build": "yarn clean && yarn build:index && yarn build:pages && yarn build:node_modules && yarn build:clean-folders",
    "build:index": "mkdir -p build/node_modules && cp index.html ./build",
    "build:pages": "cp -R pages ./build",
    "build:node_modules": "cp -R ./node_modules/@porsche-design-system ./build/node_modules && cp -R ./node_modules/@porschehn ./build/node_modules",
    "build:clean-folders": "find ./build -maxdepth 5 -type d -name .bin -exec rm -rf {} \\;",
    "clean": "rm -rf ./build",
    "prettier": "prettier --write '**/*.html'"
  },
  "dependencies": {
    "@porsche-design-system/browser-notification": "^2.0.0",
    "@porsche-design-system/components-js": "2.0.0-alpha.13",
    "@porschehn/navigation": "^1.12.0"
  },
  "devDependencies": {
    "@porsche-design-system/partials": "^2.2.0",
    "@porsche-design-system/prettier-config": "^1.0.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2"
  }
}
